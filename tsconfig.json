{
	"compilerOptions": {
			"target": "ES2019",
			"module": "CommonJS",
			"moduleResolution": "node",
			"skipLibCheck": true,
			"resolveJsonModule": true,
			"esModuleInterop": true,
			"emitDecoratorMetadata": true,
			"experimentalDecorators": true,
			"allowSyntheticDefaultImports": true,
			"declaration": false,
			"outDir": "dist",
			"paths": {
				"@/*": ["./src/*"]
			}
	},
	"include": ["src","playground"],
	"exclude": ["node_modules"]
}